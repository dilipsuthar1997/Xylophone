<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/c_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_c_button" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/d_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_d_button" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/e_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_e_button" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/f_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_f_button" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/g_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_g_button" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/a_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_a_button" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        style="@style/KeyStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="5dp">
        <Button
            android:id="@+id/b_key"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_b_button" />
    </android.support.v7.widget.CardView>



</LinearLayout>
